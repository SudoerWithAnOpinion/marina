		{
			"name": "Histoire Dev",
			"request": "launch",
			"runtimeArgs": ["run", "story:dev"],
			"runtimeExecutable": "npm",
			"skipFiles": ["<node_internals>/**"],
			"type": "node"
		}
	]
}
