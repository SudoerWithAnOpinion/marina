	"version": "0.2.0",
	"configurations": [
		{
			"name": "SvelteKit Dev Server",
			"request": "launch",
			"runtimeArgs": ["run", "dev", "--host"],
			"runtimeExecutable": "pnpm",
			"skipFiles": ["<node_internals>/**"],
			"type": "node"
